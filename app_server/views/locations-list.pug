extends layout

include _includes/sharedHTMLfunctions

block content
    .article-list(style='background-color: #0b0c10;')
        .container
            .intro
                h2.text-center(style='color: rgb(255,255,255);')= pageHeader.title
                p.text-center(style='color: rgb(255,255,255);')= pageHeader.strapline
            .row.articles
                .error= message
                each circuit in circuits
                    .col-sm-6.col-md-3.item
                        a(href=`/circuit/${circuit._id}`)
                            img.img-fluid(src= circuit.imagePath)
                        h3.name(style='color: rgb(255,255,255);')= circuit.circuitName
                        p.description(style='color: #ffffff;')= circuit.locality
                        p.description(style='color: #ffffff;')= circuit.country
                        a.action(href=`/circuit/${circuit._id}`)
                            i.fa.fa-arrow-circle-right(style='color: #66fcf1;')