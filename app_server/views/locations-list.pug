extends layout

include _includes/sharedHTMLfunctions

block content
    .row.banner
        .col-12
            h1= pageHeader.title
            small &nbsp;#{pageHeader.strapline}
    .row
        .col-12.col-md-8

        each circuit in circuits

            .col-12.col-md-6.location-map
                .card.card-primary
                    .card-block
                    h4
                        a(href="/location")= circuit.circuitName
                        small &nbsp;

                        span.badge.badge-pill.badge-default.float-right= circuit.country
                    p.address= circuit.locality
                    .facilities
                        each facility in circuit.facilities
                            span.badge.badge-warning= facility

    .col-12.col-md-4
        p.lead= sidebar
